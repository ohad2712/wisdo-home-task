    "build": "cross-env NODE_ENV=production tsc --build tsconfig.json",
    "build:clean": "rimraf ./dist",
    "lint": "run-p lint:*",
    "lint:commits": "commitlint --from=HEAD~10",
    "lint:ts": "eslint --quiet --cache --cache-location .eslintcache-ts --color src/**/*.ts",
    "lint:ts-tests": "eslint --quiet --cache --cache-location .eslintcache-tests --color 'test/**/*.test.ts' 'test/**/*.ts'",
    "format": "run-p format:*",
    "format:test": "prettier test/**/*.test.{js,ts} test/**/*.{js,ts}",
    "format:src": "prettier --write src/**/*.{js,ts}",
    "start": "nodemon --watch src --exec ts-node src/index.ts",
    "start:production": "npm run test && npm run build && npm run start:prod",
    "start:prod": "cross-env NODE_ENV=production nodemon dist/index.js",
    "test": "jest"
  },
  "repository": {
