{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020", "DOM"],
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "pretty": true,

    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,
    "useUnknownInCatchVariables": false,

    "noUnusedLocals": true,
    "skipLibCheck": true,

    "types": [
      "node",
      "jest"
    ],
    "isolatedModules": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["./src/**/*", "./test/**/*"]
}
